
@{
    ViewBag.Title = "Email";
}

<h2>Email</h2>
@using (Html.BeginForm("Create", "Email", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>创建新帐户。</h4>
    <hr />
    @Html.ValidationSummary()
    <div class="form-group">
        <label class="col-md-2 control-label">邮箱地址：</label>
        <div class="col-md-10">
            <input type="text" value="" class="form-control" id="emailTo" name="emailTo" />
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">邮件内容：</label>
        <div class="col-md-10">
            <textarea  class="form-control" style="width:300px;height:200px;" id="emailContent" name="emailContent" ></textarea>
        </div>
    </div>
    
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="发送" id="Save" name="Save" />
        </div>
    </div>
}

        <script src="~/js/sb-admin-charts.min.js"></script>
        <script>
            function GetNewUserAreaChart(day) {
                //----Line Chart---------
                var c = document.getElementById("NewUserCntChart");
                var ctx = c.getContext("2d");
                var tData = $.getValues("GetUserNameLineChartData?day=" + day);
                var myLineChart = new Chart(ctx, {
                    type: 'line',
                    data: tData,
                    options: {
                        scales: {
                            xAxes: [{
                                time: {
                                    unit: 'date'
                                },
                                gridLines: {
                                    display: false
                                },
                            }],
                            yAxes: [{
                                ticks: {
                                    min: 0,
                                    max:100,
                                    maxTicksLimit: 5
                                },
                                gridLines: {
                                    color: "rgba(0, 0, 0, .125)",
                                }
                            }],
                        },
                    }
                });
            };

            function GetNewOrderAreaChart(day) {
                //----Line Chart---------

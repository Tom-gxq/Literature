@model  AgentDashboard.Models.ShopsViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="zh-cn">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>后台管理页面</title>
    <!-- Bootstrap core CSS-->
    <link href="~/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom fonts for this template-->
    <link href="~/vendor/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <!-- Page level plugin CSS-->
    <link href="~/vendor/datatables/dataTables.bootstrap4.css" rel="stylesheet">
    <!-- Custom styles for this template-->
    <link href="~/css/sb-admin.css" rel="stylesheet">
</head>

<body class="fixed-nav sticky-footer bg-dark" id="page-top">
    <!-- Navigation-->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top" id="mainNav">
        @Html.ActionLink("后台管理", "Index", "Default", new { @class = "navbar-brand" })
        <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarResponsive">
            <ul class="navbar-nav navbar-sidenav" id="exampleAccordion">
                <li class="nav-item" data-toggle="tooltip" data-placement="right" title="餐厅">
                    <a class="nav-link" href="Index">
                        <i class="fa fa-fw fa-dashboard"></i>
                        <span class="nav-link-text">餐厅</span>
                    </a>
                </li>
                <li class="nav-item" data-toggle="tooltip" data-placement="right" title="校园超市">
                    <a class="nav-link" href="SuperMarket">
                        <i class="fa fa-fw fa-area-chart"></i>
                        <span class="nav-link-text">校园超市</span>
                    </a>
                </li>
                @*<li class="nav-item" data-toggle="tooltip" data-placement="right" title="更多">
                    <a class="nav-link" href="Details">
                        <i class="fa fa-fw fa-address-book"></i>
                        <span class="nav-link-text">更多</span>
                    </a>
                </li>*@
                <li class="nav-item" data-toggle="tooltip" data-placement="right" title="人员管理">
                    <a class="nav-link" href="HumanManager">
                        <i class="fa fa-fw fa-android"></i>
                        <span class="nav-link-text">人员管理</span>
                    </a>
                </li>
                <li class="nav-item" data-toggle="tooltip" data-placement="right" title="数据分析">
                    <a class="nav-link" href="DataAnalyze">
                        <i class="fa fa-fw fa-database"></i>
                        <span class="nav-link-text">数据分析</span>
                    </a>
                </li>
                <li class="nav-item" data-toggle="tooltip" data-placement="right" title="商家管理">
                    <a class="nav-link" href="ShopManager">
                        <i class="fa fa-fw fa-trademark"></i>
                        <span class="nav-link-text">商家管理</span>
                    </a>
                </li>
                <li class="nav-item" data-toggle="tooltip" data-placement="right" title="区域管理">
                    <a class="nav-link" href="RegionManager">
                        <i class="fa fa-fw fa-location-arrow"></i>
                        <span class="nav-link-text">区域管理</span>
                    </a>
                </li>
                <li class="nav-item" data-toggle="tooltip" data-placement="right" title="订单管理">
                    <a class="nav-link" href="OrderManager">
                        <i class="fa fa-fw fa-dollar"></i>
                        <span class="nav-link-text">订单管理</span>
                    </a>
                </li>
            </ul>
            <ul class="navbar-nav sidenav-toggler">
                <li class="nav-item">
                    <a class="nav-link text-center" id="sidenavToggler">
                        <i class="fa fa-fw fa-angle-left"></i>
                    </a>
                </li>
            </ul>
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" data-toggle="modal" data-target="#exampleModal">
                        <i class="fa fa-fw fa-sign-out"></i>登 出
                    </a>
                </li>
            </ul>
        </div>
    </nav>
    <div class="content-wrapper">
        <div class="container-fluid">
            <!-- Breadcrumbs-->
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="#">后台管理</a>
                </li>
                <li class="breadcrumb-item active">餐厅</li>
            </ol>
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <i class="fa fa-dashboard"></i>
                            餐厅列表
                        </div>
                        <div class="card-body">
                            @if (Model != null)
                            {
                                <div class="row mb-3">
                                    <div class="col-4">
                                        <span class="mb-2">学校</span>
                                        <select id="select_university" class="form-control w-100">
                                            <option value="-1">请选择</option>
                                            @foreach (var unversity in Model.UniversityList)
                                            {
                                                <option value="@unversity.Id" selected>@unversity.Name</option>
                                            }
                                        </select>
                                    </div>
                                    <div class="col-4">
                                        <span class="mb-2">院区</span>
                                        <select id="select_college" class="form-control w-100">
                                            <option value="-1" selected>请选择</option>
                                            @foreach (var college in Model.ColleageList)
                                            {
                                                <option value="@college.Id">@college.Name</option>
                                            }
                                        </select>
                                    </div>
                                    <div class="col-1">
                                        <span class="mb-2">&nbsp;</span>
                                        <button id="btn_search" class="btn btn-primary w-100" type="button">
                                            <i class="fa fa-search"></i>
                                            检索
                                        </button>
                                    </div>
                                    <div class="col-3">
                                    </div>
                                </div>
                                <!-- Icon Cards-->
                        <div id="div_shoplist" class="row mb-3">
                            @if (Model.ShopList != null)
                            {
                                foreach (var shop in Model.ShopList)
                                {
                                    <div class="col-xl-3 col-sm-6 mb-3">
                                        <div class="card text-white bg-primary o-hidden h-100">
                                            <div class="card-body">
                                                <div class="mr-5">@shop.DistrictName</div>
                                                <div class="card-body-icon">
                                                    <i class="fa fa-fw fa-home"></i>
                                                </div>
                                                <div class="mr-5">@shop.ShopName</div>
                                            </div>
                                            <a class="card-footer text-white clearfix small z-1" href="ShopDetails?shopId=@shop.Id">
                                                <span>
                                                    @{
                                                        var ShopStauts = "开店";
                                                    }
                                                    @if (shop.ShopStatus == false)
                                                    {
                                                        ShopStauts = "闭店";
                                                    }
                                                    <Label id="Lable_@shop.Id" class="mr-5" for="CheckBox_@shop.Id">@ShopStauts</Label>
                                                    <input id="CheckBox_@shop.Id" type="checkbox" checked="@shop.ShopStatus" class="form-check-input" />
                                                </span>
                                                <span class="float-right">
                                                    <i class="fa fa-angle-right"></i>
                                                </span>
                                            </a>
                                        </div>
                                    </div>
                                 }
                             }
                        </div>

                                if (ViewBag.TotalPages > 1)
                                {
                                    <div class="row">
                                        <div class="col-md-12">
                                            <ul class="pagination justify-content-md-center">
                                                <li class="page-item"><a class="page-link" href="#">Previous</a></li>
                                                @for (int @s = 1; @s <= ViewBag.TotalPages; @s++)
                                                {
                                                    if (@s == ViewBag.CurrentPage)
                                                    {
                                                        <li class="page-item active"><a class="page-link" href="#">@s</a></li>
                                                        continue;
                                                    }

                                                    <li class="page-item"><a class="page-link" href="#">@s</a></li>
                                                }
                                                <li class="page-item"><a class="page-link" href="#">Next</a></li>
                                            </ul>
                                        </div>
                                    </div>
                                }
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.container-fluid-->
        <!-- /.content-wrapper-->
        <footer class="sticky-footer">
            <div class="container">
                <div class="text-center">
                    <small>Copyright © Your Website 2018</small>
                </div>
            </div>
        </footer>
        <!-- Scroll to Top Button-->
        <a class="scroll-to-top rounded" href="#page-top">
            <i class="fa fa-angle-up"></i>
        </a>
        <!-- Logout Modal-->
        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">准备要登出?</h5>
                        <button class="close" type="button" data-dismiss="modal" aria-label="关闭">
                            <span aria-hidden="true">×</span>
                        </button>
                    </div>
                    <div class="modal-body">选择下面的 "登出" 如果您准备好结束当前会话.</div>
                    <div class="modal-footer">
                        <button class="btn btn-secondary" type="button" data-dismiss="modal">取 消</button>
                        @Html.ActionLink("登 出", "Login", "Home", new { @class = "btn btn-primary" })
                    </div>
                </div>
            </div>
        </div>

        <!-- Bootstrap core JavaScript-->
        <script src="~/vendor/jquery/jquery.min.js"></script>
        <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
        <!-- Core plugin JavaScript-->
        <script src="~/vendor/jquery-easing/jquery.easing.min.js"></script>
        <!-- Page level plugin JavaScript-->
        <script src="~/vendor/datatables/jquery.dataTables.js"></script>
        <script src="~/vendor/datatables/dataTables.bootstrap4.js"></script>
        <!-- Custom scripts for all pages-->
        <script src="~/js/sb-admin.js"></script>
        <script>
            $(document).ready(function () {
                $("input[type='checkbox']").each(function (i) {
                    var chkId = $(this).attr("Id");
                    $("#" + chkId).change(function () {
                        var id = chkId.split("_")[1];
                        var labelId = "Lable_" + id;
                        var jsonObj = [];
                        var isChecked = $(this).prop("checked");
                        jsonObj.push({ Id: id, ShopStatus: isChecked });
                        var shopStatus = "闭店";
                        if (isChecked) {
                            shopStatus = "开店";
                        }

                        $.ajax({
                            type: "POST",
                            url: "UpdateShopStatus",
                            data: JSON.stringify(jsonObj),
                            dataType: "json",
                            success: function (response) {
                                $("#" + labelId).text(shopStatus)
                            }
                        });
                    });
                });

                $("#select_university").get(0).selectedIndex = 1;

                $("#btn_search").click(function () {
                    var unversity = $("#select_university").val();
                    if (unversity == -1) {
                        alert("请选择学校!");
                        return;
                    }

                    var college = $("#select_college").val();
                    var data = $.getValues("GetShopListByRegionId?unversityId=" + unversity + "&collegeId=" + college);
                    var shopList = $("#div_shoplist");
                    shopList.empty();

                    $.each(data, function (i, college) {
                        var col = $("<div></div>")
                            .addClass("col-xl-3 col-sm-6 mb-3")
                            .appendTo(shopList);

                        var card = $("<div></div>")
                            .addClass("card text-white bg-primary o-hidden h-100")
                            .appendTo(col);

                        var cardbody = $("<div></div>")
                            .addClass("card-body")
                            .appendTo(card);

                        var districtname = $("<div></div>")
                            .addClass("mr-5")
                            .text(college["DistrictName"])
                            .appendTo(cardbody);

                        var icon = $("<div></div>")
                            .addClass("card-body-icon")
                            .appendTo(cardbody);

                        var i = $("<i></i>")
                            .addClass("fa fa-fw fa-home")
                            .appendTo(icon);

                        var shopname = $("<div></div>")
                            .addClass("mr-5")
                            .text(college["ShopName"])
                            .appendTo(cardbody);

                        var footer = $("<a></a>")
                            .addClass("card-footer text-white clearfix small z-1")
                            .attr("href", "ShopDetails?shopId=" + college["Id"])
                            .appendTo(card);

                        var span = $("<span></span>")
                            .appendTo(footer);

                        var status = college["ShopStatus"];
                        var statusTxt = status ? "开店" : "闭店";
                        var lable = $("<Lable></Lable>")
                            .attr("id", "Lable_" + college["Id"])
                            .attr("for", "CheckBox_" + college["Id"])
                            .text(statusTxt)
                            .addClass("mr-5")
                            .appendTo(span);

                        var chkbox = $("<input></input>")
                            .attr("type", "checkbox")
                            .attr("id", "CheckBox_" + college["Id"])
                            .attr("checked", college["ShopStatus"])
                            .addClass("form-check-input")
                            .appendTo(span);

                        var spanright = $("<span></span>")
                            .addClass("float-right")
                            .appendTo(footer);

                        var iright = $("<i></i>")
                            .addClass("fa fa-angle-right")
                            .appendTo(spanright);

                        chkbox.change(function () {
                            var jsonObj = [];
                            var isChecked = $(this).prop("checked");
                            jsonObj.push({ Id: college["Id"], ShopStatus: isChecked });
                            var shopStatus = "闭店";
                            if (isChecked) {
                                shopStatus = "开店";
                            }

                            $.ajax({
                                type: "POST",
                                url: "UpdateShopStatus",
                                data: JSON.stringify(jsonObj),
                                dataType: "json",
                                success: function (response) {
                                    lable.text(shopStatus)
                                }
                            });
                        });
                    });
                });
            });

            $("#select_university").change(function () {
                var tData = $.getValues("GetColleges?dataId=" + $(this).val());
                $("#select_college").empty();
                $("<option></option>")
                    .val(-1)
                    .text("请选择")
                    .appendTo($("#select_college"));

                $.each(tData, function (i, item) {
                    $("<option></option>")
                        .val(item["ID"])
                        .text(item["Name"])
                        .appendTo($("#select_college"));
                });
            });
        </script>
    </div>
</body>

</html>

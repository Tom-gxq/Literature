            </ul>
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" data-toggle="modal" data-target="#exampleModal">
                        <i class="fa fa-fw fa-sign-out"></i>登 出
                    </a>
                </li>
            </ul>
        </div>
    </nav>
    <div class="content-wrapper">
        <div class="container-fluid">
            <!-- Breadcrumbs-->
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="Index">后台管理</a>
                </li>
                <li class="breadcrumb-item"><a href="HumanManager">商家管理</a></li>
                <li class="breadcrumb-item active">商家管理详细信息</li>
            </ol>

            <!--Deliverman information div-->
            <div class="row">
                <div class="col-12">
                    <div class="card mb-3">
                        <div class="card-header">
                            <i class="fa fa-address-book"></i>
                            商家信息
                        </div>
                        <input type="hidden" id="sellerId" value="@Model.SellerId"/>
                        <input type="hidden" id="accountId" value="@Model.AccountId" />
                        <input type="hidden" id="leaderId" value="@Model.AccountId" />
                        <div class="card-body">
                            <table width="100%">
                                <tr>
                                    <td rowspan="3">
                                        <img src="@Model.LogoPath" width="60px" height="70px"/>
                                    </td>
                                    <td >
                                        <input type="text" class="form-control" readonly value="名称：@Model.SellerName"/>
                                    </td>
                                    <td style="text-align:center">
                                        <a  href="@Model.LicensePath" >营业执照</a>
                                    </td>
                                                                            
                                </tr>
                                <tr>
                                    <td >
                                        <input type="text" class="form-control" readonly value="电话：@Model.TelNumber"/>
                                    </td>
                                    <td style="text-align:center">
                                        <a href="@Model.PermitPath">营业许可</a>
                                    </td>

                                </tr>
                                <tr>
                                    <td >
                                        <input type="text" class="form-control" readonly value="负责人：@Model.AccountName"/>
                                    </td>
                                    <td style="text-align:center">
                                        <a href="@Model.AuthorizationPath">授权函</a>
                                    </td>

                                </tr>
                                <tr>
                                    <td colspan="3">
                                        <input type="text" class="form-control" readonly value="提现账号：@Model.AlipayNo" />
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-10 justify-content-center">
                    <ul class="nav nav-tabs" id="myTab" role="tablist">
                        @foreach (var type in Model.TypeList)
                        {
                            <li class="nav-item">
                                <a class="nav-link" id="@type.TypeId" data-toggle="tab" href="#@type.TypeName" role="tab" aria-controls="@type.TypeName" aria-selected="true">@type.TypeName<i dataid="@type.TypeId"></i></a>
                            </li>
                        }
                    </ul>
                    <div class="tab-content" id="myTabContent">

                        @using SP.Application.Product.DTO
                        @{int j = 0;}
                        @foreach (var key in Model.ProductDic.Keys)
                        {
                            var list = Model.ProductDic[key];
                            <div class="tab-pane fade show @j==0?active:''" id="@key.TypeName" role="tabpanel" aria-labelledby="@key.TypeId">
                                <div class="card-deck">
                                    @foreach (var product in list)
                                    {
                                        <div class="col-xl-3 col-sm-6 mb-3">
                                            <div class="card" dataid="@product.ProductId" style="width:200px;height:196px;float: left;margin-right: 1px;margin-left: 1px;flex:0%">
                                                <div class="fa fa-fw fa-close" dataid="@product.ProductId" ></div>
                                                <img class="card-img-top" src="
                                         @if (@product.ProductImage.Count > 0)
                                         {
                                             @product.ProductImage[0].ImgPath
                                         }" alt="" >

                                                <div class="card-body">
                                                    <h5 class="card-title">@product.ProductName</h5>
                                                    <div class="row">
                                                        <label>市场价</label><input type="text" class="form-control form-text w-50 h-50 prestock" value="@product.MarketPrice" id="MarketPrice_@product.ProductId" onchange="EditMarketPrice('@product.ProductId')"/>
                                                    </div>
                                                    <div class="row">
                                                        <label>会员价</label><input type="text" class="form-control form-text w-50 h-50 prestock" value="@product.VIPPrice" id="VIPPrice_@product.ProductId" onchange="EditVIPPrice('@product.ProductId')" />
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                    <div class="card cardadd" style="width:200px;height:196px;text-align:center;">
                                        <div class="card-body">
                                            <p class="card-text"><a href="#"><h1>+</h1></a></p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                        @if (Model.ProductDic == null || Model.ProductDic.Keys.Count == 0)
                        {
                            <div class="card cardadd" style="width:200px;height:196px;text-align:center;">
                                <div class="card-body">
                                    <p class="card-text"><a href="#"><h1>+</h1></a></p>
                                </div>
                            </div>
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- /.container-fluid-->
    <!-- /.content-wrapper-->
    <footer class="sticky-footer">
        <div class="container">
            <div class="text-center">
                <small>Copyright © Your Website 2018</small>
            </div>
        </div>
    </footer>
    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fa fa-angle-up"></i>
    </a>
    <!-- Logout Modal-->
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">准备要登出?</h5>
                    <button class="close" type="button" data-dismiss="modal" aria-label="关闭">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">选择下面的 "登出" 如果您准备好结束当前会话.</div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">取 消</button>
                    @Html.ActionLink("登 出", "Login", "Home", new { @class = "btn btn-primary" })
                </div>
            </div>
        </div>
    </div>
    <!-- Bootstrap core JavaScript-->
    <script src="~/vendor/jquery/jquery.min.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js?v=1"></script>
    <!-- Core plugin JavaScript-->
    <script src="~/vendor/jquery-easing/jquery.easing.min.js"></script>
    <!-- Page level plugin JavaScript-->
    <script src="~/vendor/chart.js/Chart.min.js"></script>
    <script src="~/vendor/datatables/jquery.dataTables.js"></script>
    <script src="~/vendor/datatables/dataTables.bootstrap4.js"></script>
    <!-- Custom scripts for all pages-->
    <script src="~/js/sb-admin.min.js"></script>
    <!-- Custom scripts for this page-->
    <script>
        $(function () {
            $('#myTab li:eq(0) a').tab('show');
        });

        $(document).ready(function () {
            //$('#myTab a').click(function (e) {
            //    e.preventDefault()
            //    $(this).tab('show')
            //})
        });
        function EditMarketPrice(productId) {
            var price = $("#MarketPrice_" + productId).val();
            $.post("/Default/UpdateProductMarketPrice?Id=" + productId + "&price=" + price);
        };
        function EditVIPPrice(productId) {
            var price = $("#VIPPrice_" + productId).val();
            $.post("/Default/UpdateProductVIPPrice?Id=" + productId + "&price=" + price);
        };
    </script>

    <script type="text/javascript" src="/js/seajs/sea.js"></script>
    <script type="text/javascript" src="/js/seajs/sea-config.js"></script>
    <script type="text/javascript">
        seajs.use(["/js/sellerdetail/detail"], function (OrderList) {
            var $ = OrderList.jQuery;
            OrderList.SellerDetailController.init({ el: '', url: '' });
        });
    </script>
    <script type="text/javascript" src="/js/plug/plupload/plupload.full.min.js"></script>
    <script type="text/javascript" src="/js/plug/plupload/i18n/zh_CN.js"></script>
    <script type="text/javascript" src="/js/plug/qiniu/ui.js"></script>
    <script type="text/javascript" src="/js/plug/qiniu/qiniu.js"></script>
    <script type="text/javascript" src="/js/plug/qiniu/highlight.js"></script>
    <script type="text/javascript" src="/js/plug/qiniu/main.js"></script>
    
</body>

</html>

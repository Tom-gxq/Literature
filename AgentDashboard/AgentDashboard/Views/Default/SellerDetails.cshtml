@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="zh-cn">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>后台管理页面</title>
    <!-- Bootstrap core CSS-->
    <link href="~/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom fonts for this template-->
    <link href="~/vendor/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <!-- Page level plugin CSS-->
    <link href="~/vendor/datatables/dataTables.bootstrap4.css" rel="stylesheet">
    <!-- Custom styles for this template-->
    <link href="~/css/sb-admin.css" rel="stylesheet">
</head>

<body class="fixed-nav sticky-footer bg-dark" id="page-top">
    <!-- Navigation-->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top" id="mainNav">
        @Html.ActionLink("后台管理", "Index", "Default", new { @class = "navbar-brand" })
        <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarResponsive">
            <ul class="navbar-nav navbar-sidenav" id="exampleAccordion">
                <li class="nav-item" data-toggle="tooltip" data-placement="right" title="餐厅">
                    <a class="nav-link" href="Index">
                        <i class="fa fa-fw fa-dashboard"></i>
                        <span class="nav-link-text">餐厅</span>
                    </a>
                </li>
                <li class="nav-item" data-toggle="tooltip" data-placement="right" title="校园超市">
                    <a class="nav-link" href="SuperMarket">
                        <i class="fa fa-fw fa-area-chart"></i>
                        <span class="nav-link-text">校园超市</span>
                    </a>
                </li>
                <li class="nav-item" data-toggle="tooltip" data-placement="right" title="更多">
                    <a class="nav-link" href="Details">
                        <i class="fa fa-fw fa-address-book"></i>
                        <span class="nav-link-text">更多</span>
                    </a>
                </li>
                <li class="nav-item" data-toggle="tooltip" data-placement="right" title="人员管理">
                    <a class="nav-link" href="HumanManager">
                        <i class="fa fa-fw fa-android"></i>
                        <span class="nav-link-text">人员管理</span>
                    </a>
                </li>
                <li class="nav-item" data-toggle="tooltip" data-placement="right" title="数据分析">
                    <a class="nav-link" href="DataAnalyze">
                        <i class="fa fa-fw fa-database"></i>
                        <span class="nav-link-text">数据分析</span>
                    </a>
                </li>
                <li class="nav-item" data-toggle="tooltip" data-placement="right" title="商家管理">
                    <a class="nav-link" href="ShopManager">
                        <i class="fa fa-fw fa-trademark"></i>
                        <span class="nav-link-text">商家管理</span>
                    </a>
                </li>
                <li class="nav-item" data-toggle="tooltip" data-placement="right" title="区域管理">
                    <a class="nav-link" href="RegionManager">
                        <i class="fa fa-fw fa-location-arrow"></i>
                        <span class="nav-link-text">区域管理</span>
                    </a>
                </li>
                <li class="nav-item" data-toggle="tooltip" data-placement="right" title="订单管理">
                    <a class="nav-link" href="OrderManager">
                        <i class="fa fa-fw fa-dollar"></i>
                        <span class="nav-link-text">订单管理</span>
                    </a>
                </li>
            </ul>
            <ul class="navbar-nav sidenav-toggler">
                <li class="nav-item">
                    <a class="nav-link text-center" id="sidenavToggler">
                        <i class="fa fa-fw fa-angle-left"></i>
                    </a>
                </li>
            </ul>
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" data-toggle="modal" data-target="#exampleModal">
                        <i class="fa fa-fw fa-sign-out"></i>登 出
                    </a>
                </li>
            </ul>
        </div>
    </nav>
    <div class="content-wrapper">
        <div class="container-fluid">
            <!-- Breadcrumbs-->
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="Index">后台管理</a>
                </li>
                <li class="breadcrumb-item"><a href="HumanManager">商家管理</a></li>
                <li class="breadcrumb-item active">商家管理详细信息</li>
            </ol>

            <!--Deliverman information div-->
            <div class="row">
                <div class="col-12">
                    <div class="card mb-3">
                        <div class="card-header">
                            <i class="fa fa-address-book"></i>
                            商家信息
                        </div>
                        <input type="hidden" id="sellerId" value="@Model.SellerId"/>
                        <input type="hidden" id="accountId" value="@Model.AccountId" />
                        <input type="hidden" id="leaderId" value="@Model.AccountId" />
                        <div class="card-body">
                            <table width="100%">
                                <tr>
                                    <td rowspan="3">
                                        <img src="@Model.LogoPath" width="60px" height="70px"/>
                                    </td>
                                    <td >
                                        <input type="text" class="form-control" readonly value="名称：@Model.SellerName"/>
                                    </td>
                                    <td style="text-align:center">
                                        <a  href="@Model.LicensePath" >营业执照</a>
                                    </td>
                                                                            
                                </tr>
                                <tr>
                                    <td >
                                        <input type="text" class="form-control" readonly value="电话：@Model.TelNumber"/>
                                    </td>
                                    <td style="text-align:center">
                                        <a href="@Model.PermitPath">营业许可</a>
                                    </td>

                                </tr>
                                <tr>
                                    <td >
                                        <input type="text" class="form-control" readonly value="负责人：@Model.AccountName"/>
                                    </td>
                                    <td style="text-align:center">
                                        <a href="@Model.AuthorizationPath">授权函</a>
                                    </td>

                                </tr>
                                <tr>
                                    <td colspan="3">
                                        <input type="text" class="form-control" readonly value="提现账号：@Model.AlipayNo" />
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-12 justify-content-center">
                    <ul class="nav nav-tabs" id="myTab" role="tablist">
                        @for (int i=0;i< Model.TypeList.Count;i++)
                        {
                            if (i == 0)
                            {
                            <li class="nav-item">
                                <a class="nav-link active" id="deliverman1-tab_@Model.TypeList[i].TypeId" data-toggle="tab" href="#deliverman1" role="tab" aria-controls="deliverman1" aria-selected="true">@Model.TypeList[i].TypeName</a>
                            </li>
                            }
                            else
                            {
                                <li class="nav-item">
                                    <a class="nav-link" id="deliverman1-tab_@Model.TypeList[i].TypeId" data-toggle="tab" href="#deliverman1" role="tab" aria-controls="deliverman1" aria-selected="true">@Model.TypeList[i].TypeName</a>
                                </li>
                            }
                        }
                        
                    </ul>
                    <div class="tab-content" id="myTabContent" style="">
                        @using SP.Application.Product.DTO
                        @foreach (List<ProductsDto> list in Model.ProductDic)
                        {

                            for(int i = 0; i < list.Count; i++)
                            {
                                <div class="card" style="width:200px;height:196px;float: left">
                                    <div class="card-body">

                                        <img class="card-img-top" src="
                                         @if (@list[i].ProductImage.Count > 0)
                                         {
                                             @list[i].ProductImage[0].ImgPath
                                         }" alt="" style="width:80px;height:80px">
                                        <div class="card-body">
                                            <h5 class="card-title">@list[i].ProductName</h5>
                                        </div>
                                        @*<div class="card-footer">
                                            <div class="row">
                                                <label>库存</label><input type="text" class="form-control form-text w-75 h-50" />
                                            </div>
                                        </div>*@
                                    </div>
                                </div>
                            }

                        }
                        <div class="card cardadd" style="width:200px;height:196px;text-align:center;">
                            <div class="card-body">
                                <p class="card-text"><a href="#"><h1>+</h1></a></p>
                            </div>
                        </div>
                    </div>



                </div>
            </div>
            <!--trade infomation-->
            <div class="row">
                <div class="col-12">
                    <div class="card mb-3">
                        <div class="card-header">
                            <i class="fa fa-dollar"></i>
                            交易数据
                        </div>
                        <div class="card-body">
                            <div class="row form-group mb-3">
                                <div class="col-12">
                                    <button class="btn btn-primary">7天</button>
                                    <button class="btn btn-primary">15天</button>
                                    <button class="btn btn-primary">30天</button>
                                    <button class="btn btn-primary">交易额</button>
                                    <button class="btn btn-primary">数量</button>
                                </div>
                            </div>
                            <div class="card mb-3">
                                <div class="card-header">
                                    <i class="fa fa-area-chart"></i> Area Chart Example
                                </div>
                                <div class="card-body">
                                    <div class="chartjs-size-monitor" style="position: absolute; left: 0px; top: 0px; right: 0px; bottom: 0px; overflow: hidden; pointer-events: none; visibility: hidden; z-index: -1;"><div class="chartjs-size-monitor-expand" style="position:absolute;left:0;top:0;right:0;bottom:0;overflow:hidden;pointer-events:none;visibility:hidden;z-index:-1;"><div style="position:absolute;width:1000000px;height:1000000px;left:0;top:0"></div></div><div class="chartjs-size-monitor-shrink" style="position:absolute;left:0;top:0;right:0;bottom:0;overflow:hidden;pointer-events:none;visibility:hidden;z-index:-1;"><div style="position:absolute;width:200%;height:200%;left:0; top:0"></div></div></div>
                                    <canvas id="myAreaChart" width="967" height="290" class="chartjs-render-monitor" style="display: block; width: 967px; height: 290px;"></canvas>
                                </div>
                                <div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- /.container-fluid-->
    <!-- /.content-wrapper-->
    <footer class="sticky-footer">
        <div class="container">
            <div class="text-center">
                <small>Copyright © Your Website 2018</small>
            </div>
        </div>
    </footer>
    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fa fa-angle-up"></i>
    </a>
    <!-- Logout Modal-->
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">准备要登出?</h5>
                    <button class="close" type="button" data-dismiss="modal" aria-label="关闭">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">选择下面的 "登出" 如果您准备好结束当前会话.</div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">取 消</button>
                    @Html.ActionLink("登 出", "Login", "Home", new { @class = "btn btn-primary" })
                </div>
            </div>
        </div>
    </div>
    <!-- Bootstrap core JavaScript-->
    <script src="~/vendor/jquery/jquery.min.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- Core plugin JavaScript-->
    <script src="~/vendor/jquery-easing/jquery.easing.min.js"></script>
    <!-- Page level plugin JavaScript-->
    <script src="~/vendor/chart.js/Chart.min.js"></script>
    <script src="~/vendor/datatables/jquery.dataTables.js"></script>
    <script src="~/vendor/datatables/dataTables.bootstrap4.js"></script>
    <!-- Custom scripts for all pages-->
    <script src="~/js/sb-admin.min.js"></script>
    <!-- Custom scripts for this page-->
    <script src="~/js/sb-admin-datatables.min.js"></script>
    <script src="~/js/sb-admin-charts.min.js"></script>
    <script type="text/javascript" src="/js/seajs/sea.js"></script>
    <script type="text/javascript" src="/js/seajs/sea-config.js"></script>
    <script type="text/javascript">
        seajs.use(["/js/sellerdetail/detail"], function (OrderList) {
            var $ = OrderList.jQuery;
            OrderList.SellerDetailController.init({ el: '', url: '' });
        });
    </script>
    <script type="text/javascript" src="/js/plug/plupload/plupload.full.min.js"></script>
    <script type="text/javascript" src="/js/plug/plupload/i18n/zh_CN.js"></script>
    <script type="text/javascript" src="/js/plug/qiniu/ui.js"></script>
    <script type="text/javascript" src="/js/plug/qiniu/qiniu.js"></script>
    <script type="text/javascript" src="/js/plug/qiniu/highlight.js"></script>
    <script type="text/javascript" src="/js/plug/qiniu/main.js"></script>
    
</body>

</html>
